<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Iv</th>
      <th>Token</th>
      <th>File name</th>
      <th>Size</th>
      <th>Creation</th>
      <th>Repositories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.iv %></td>
        <td><%= record.token %></td>
        <td><%= record.file_name %></td>
        <td><%= record.size %></td>
        <td><%= record.creation %></td>
        <td><%= record.repositories %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

